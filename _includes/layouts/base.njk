<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <div class="wrapper">
      <header>
        <div class="internal-content">
          <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
          <ul class="nav">
            <li class="nav-item{% if page.url.match("posts") %} nav-item-active{% endif %}"><a href="/posts">Posts</a></li>
            <li class="nav-item{% if page.url.match("talks") %} nav-item-active{% endif %}"><a href="/talks">Talks</a></li>
            <li class="nav-item{% if page.url.match("more") %} nav-item-active{% endif %}"><a href="/resources">Resources</a></li>
            <li class="nav-item{% if page.url.match("about") %} nav-item-active{% endif %}"><a href="/about">About</a></li>
          </ul>
        </div>
      </header>

      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>

      <footer>
        <div class="internal-content">
          <ion-icon name="heart" size="large"></ion-icon>
        </div>
      </footer>
    </div>
    <!-- Current page: {{ page.url | url }} -->
    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
  </body>
</html>
