<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <div class="wrapper">
      <header>
        <div class="internal-content">
          <h1 class="home">
            <a href="{{ '/' | url }}">
              {{ metadata.title }}
            </a>
          </h1>
          <ul class="nav">
            <li class="nav-item{% if page.url.match("posts") %} nav-item-active{% endif %}"><a href="/posts">
              Posts
            </a></li>
            <li class="nav-item{% if page.url.match("talks") %} nav-item-active{% endif %}"><a href="/talks">
              Talks
            </a></li>
            <li class="nav-item{% if page.url.match("more") %} nav-item-active{% endif %}"><a href="/resources">
              Resources
            </a></li>
            <li class="nav-item{% if page.url.match("about") %} nav-item-active{% endif %}"><a href="/about">
              About
            </a></li>
          </ul>
        </div>
      </header>

      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>

      <footer>
        <div class="internal-content">
          <ul class="social-media">
            <li class="social-media-item">
              <a href="https://twitter.com/AbbyJones80">
                <ion-icon name="logo-twitter"></ion-icon>Twitter
              </a>
            </li>
            <li class="social-media-item">
              <a href="https://github.com/AbbyJonesDev">
                <ion-icon name="logo-github"></ion-icon>GitHub
              </a>
            </li>
             <li class="social-media-item">
              <a href="https://codepen.io/AbbyJonesDev">
                <ion-icon name="logo-codepen"></ion-icon>CodePen
              </a>
            </li>
            <li class="social-media-item">
              <a href="https://www.linkedin.com/in/abbyjones80">
                <ion-icon name="logo-linkedin"></ion-icon>LinkedIn
              </a>
            </li>
            <li class="social-media-item">
              <a href="mailto:abbyjonesdev@gmail.com">
                <ion-icon name="mail"></ion-icon>Email
              </a>
            </li>
          </ul>

          
        </div>
      </footer>
    </div>
    <!-- Current page: {{ page.url | url }} -->
    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
  </body>
</html>
